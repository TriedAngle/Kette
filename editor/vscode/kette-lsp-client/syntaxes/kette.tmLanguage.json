{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Kette",
  "scopeName": "source.kette",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#messages"
    },
    {
      "include": "#operators"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.kette",
          "match": "//.*$"
        },
        {
          "name": "comment.block.kette",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.kette",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.kette",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.kette",
          "match": "\\b[+-]?\\d[\\d_]*(?:\\.\\d[\\d_]*)?(?:[eE][+-]?\\d[\\d_]*)?\\b"
        },
        {
          "name": "constant.numeric.kette",
          "match": "\\b[+-]?\\d+[rR][0-9A-Fa-f_]+\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.kette",
          "match": "\\b(resend)\\b"
        },
        {
          "name": "variable.language.self.kette",
          "match": "\\bself\\b"
        },
        {
          "name": "constant.language.kette",
          "match": "\\b(True|False|None|true|false)\\b"
        }
      ]
    },
    "messages": {
      "patterns": [
        {
          "name": "entity.name.function.keyword-message.kette",
          "match": "\\b[A-Za-z_][A-Za-z0-9_]*:"
        },
        {
          "name": "entity.name.function.unary-message.kette",
          "match": "\\b[A-Za-z_][A-Za-z0-9_]*\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.assignment.kette",
          "match": ":=|="
        },
        {
          "name": "keyword.operator.kette",
          "match": "[!@#$%&*+\\-=/~?<>,'`\\\\|]+"
        },
        {
          "name": "punctuation.separator.statement.kette",
          "match": "[.;]"
        },
        {
          "name": "punctuation.definition.block.kette",
          "match": "[(){}\\[\\]|]"
        },
        {
          "name": "keyword.control.return.kette",
          "match": "\\^"
        }
      ]
    }
  }
}
